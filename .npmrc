# Zero-Trust Security Configuration
# Emergency response to CISA NPM compromise alert

# 1. Package Security
engine-strict=true
fund=false
audit-level=high

# 2. Registry Security  
registry=https://registry.npmjs.org/
# Consider switching to: registry=https://npm.pkg.github.com/

# 3. Cache Security
cache-max=0
prefer-offline=false

# 4. Install Security
package-lock=true
shrinkwrap=true
save-exact=true

# 5. Network Security
maxsockets=1
timeout=30000

# 6. Audit Configuration
audit=true
audit-level=moderate

# 7. Development Security
dev=false
production=true

# 8. Dependency Security  
only=prod
omit=dev